#!/usr/bin/env bash
# /usr/bin/wal-set
#
# Script to set colors generated by 'wal'
#  https://github.com/dylanaraps/pywal

# Source generated colors.
source "${HOME}/.cache/wal/colors.sh"

reload_dunst() {
    pkill dunst
    dunst \
        -lb "${color0:-#F0F0F0}" \
        -nb "${color0:-#F0F0F0}" \
        -cb "${color0:-#F0F0F0}" \
        -lf "${color15:=#000000}" \
        -bf "${color15:=#000000}" \
        -cf "${color15:=#000000}" \
        -nf "${color15:=#000000}" \
        -fn "${DUNST_FONT:-Artwiz Lemon 7}" \
        -geometry "${DUNST_SIZE:-300x30-40+70}" &
}

reload_polybar() {
  source "${HOME}/.config/polybar/launch.sh"
}

main() {
    #reload_dunst &
    reload_polybar &
}

main
