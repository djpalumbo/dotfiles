# i3 config file (v4)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4
set $alt Mod1
set $super Mod4

set $term termite
set $term2 urxvt
set $shell bash
set $locker pixlock

########################
# LAPTOP FUNCTION KEYS #
########################
# Keyboard backlight
bindsym XF86KbdBrightnessDown exec light -k -U 1
bindsym XF86KbdBrightnessUp exec light -k -A 1
# Screen brightness
bindsym XF86MonBrightnessDown exec light -U 2
bindsym XF86MonBrightnessUp exec light -A 2
# Audio controls
bindsym XF86AudioMute exec amixer sset Master toggle
bindsym XF86AudioLowerVolume exec amixer sset Master 2%-
bindsym XF86AudioRaiseVolume exec amixer sset Master 2%+
bindsym XF86AudioPlay exec --no-startup-id mpc toggle
bindsym XF86AudioPrev exec --no-startup-id mpc prev
bindsym XF86AudioNext exec --no-startup-id mpc next
bindsym XF86AudioStop exec --no-startup-id mpc stop
# Calculator
bindsym XF86Calculator exec speedcrunch

###################
# LAPTOP TOUCHPAD #
###################
# Mouse sensitivity
exec --no-startup-id xinput set-prop "Asus TouchPad" "Device Accel Constant Deceleration" 1.30
# Tap to click
exec --no-startup-id xinput set-prop "Asus TouchPad" "Synaptics Tap Action" 1 1 1 1 1 1 1
# Natural scrolling
exec --no-startup-id xinput set-prop "Asus TouchPad" "Synaptics Scrolling Distance" -66 -66

##############
# APPEARANCE #
##############
# Font for window titles. Will also be used by the bar unless a different font
#  is used in the bar {} block below.
font pango:DejaVu Sans Mono 11
# Set desktop wallpaper and terminal colorscheme (set via ~/.wallpaper).
#  Also, note the 'wal -r' in .bashrc
exec --no-startup-id wal -i $HOME/Pictures/Wallpapers -o wal-set -t -e
# exec --no-startup-id feh --bg-fill "$(< "${HOME}/.cache/wal/wal")"
# Window transparency
exec --no-startup-id compton -b
# Status bar
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

####################
# STARTUP SETTINGS #
####################
# Start session with numlock enabled
exec --no-startup-id numlockx
# Lock on system power change
exec --no-startup-id xss-lock basiclock
# Make wal colors automatic (urxvt)
exec --no-startup-id xrdb -merge ~/.cache/wal/colors.Xresources

#####################
# TRAY APPLICATIONS #
#####################
# Start/stop a tray application
bindsym $super+Home mode "$tray"

set $tray (i)nsync,   (n)etwork manager,   (r)edshift
mode "$tray"
{
  # These bindings trigger as soon as you enter the tray mode
  # Sync gdrive folder with cloud
  bindsym i exec --no-startup-id insync start, mode "default"
  # WiFi tray icon (using Network Manager)
  bindsym n exec --no-startup-id nm-applet, mode "default"
  # Adjust screen brightness/color based on time of day (like f.lux)
  bindsym r exec --no-startup-id redshift-gtk -t 5500:2625, mode "default"

  # Stop tray applications
  bindsym Shift+i exec --no-startup-id killall insync, mode "default"
  bindsym Shift+n exec --no-startup-id killall nm-applet, mode "default"
  bindsym Shift+r exec --no-startup-id killall redshift, mode "default"

  # Back to normal
  bindsym $super+Home mode "default"
  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym q mode "default"
}

###########
# GENERAL #
###########
# Start a terminal
bindsym $super+Return exec $term
bindsym $super+Shift+Return exec $term2
bindsym $super+t exec $term
bindsym $super+Shift+t exec $term2
bindsym $alt+t exec $term
bindsym $alt+Shift+t exec $term2
# Open a file explorer
bindsym $super+f exec $term2 -e ranger
bindsym $super+Shift+f exec nemo
# Open a text editor
bindsym $super+v exec $term2 -e nvim
# Open a web browser
bindsym $super+i exec chromium
bindsym $super+Shift+i exec firefox
# Start a program launcher
bindsym $super+r exec --no-startup-id rofi -show run
# Start a task manager
bindsym Ctrl+$alt+Delete exec --no-startup-id $term2 -e vtop
bindsym Ctrl+$alt+Shift+Delete exec --no-startup-id $term2 -e htop
# Open a music player
bindsym $super+XF86AudioPlay exec --no-startup-id $term2 -e ncmpcpp
bindsym Shift+XF86AudioPlay exec --no-startup-id mopidy
bindsym Shift+XF86AudioStop exec --no-startup-id killall mopidy
# Cycle wallpapers and apply new colorscheme
bindsym $super+w exec wal -i $HOME/Pictures/Wallpapers -o wal-set -t

# Kill focused window
bindsym $super+q kill
bindsym $alt+q kill
bindsym $alt+F4 kill

# Change focus
bindsym $super+h focus left
bindsym $super+j focus down
bindsym $super+k focus up
bindsym $super+l focus right
# Move focused window
bindsym $super+Shift+h move left
bindsym $super+Shift+j move down
bindsym $super+Shift+k move up
bindsym $super+Shift+l move right

# Border on (see where focus is)
bindsym $mod+period exec i3-msg border pixel 2
bindsym --release $mod+period exec i3-msg border pixel 0

# Split in horizontal orientation
bindsym $super+F11 split h
# Split in vertical orientation
bindsym $super+F10 split v

# Enter fullscreen mode for the focused container
bindsym $super+space fullscreen toggle

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Change container layout (stacked, tabbed, toggle split)
#bindsym $mod+s layout stacking
#bindsym $mod+w layout tabbed
bindsym $super+slash layout toggle split

# Toggle tiling / floating
#bindsym $mod+Shift+space floating toggle

# Change focus between tiling / floating windows
#bindsym $mod+space focus mode_toggle

# Focus the parent container
#bindsym $mod+a focus parent
# Focus the child container
#bindsym $mod+d focus child

# Switch to workspace
bindsym $super+1 workspace 1
bindsym $super+2 workspace 2
bindsym $super+3 workspace 3
bindsym $super+4 workspace 4
bindsym $super+5 workspace 5
bindsym $super+6 workspace 6
bindsym $super+7 workspace 7
bindsym $super+8 workspace 8
bindsym $super+9 workspace 9
# Move focused container to workspace
bindsym $super+Shift+1 move container to workspace 1
bindsym $super+Shift+2 move container to workspace 2
bindsym $super+Shift+3 move container to workspace 3
bindsym $super+Shift+4 move container to workspace 4
bindsym $super+Shift+5 move container to workspace 5
bindsym $super+Shift+6 move container to workspace 6
bindsym $super+Shift+7 move container to workspace 7
bindsym $super+Shift+8 move container to workspace 8
bindsym $super+Shift+9 move container to workspace 9
# Switch to previous workspace
bindsym $alt+Tab workspace back_and_forth

# Reload the configuration file
bindsym $super+F5 reload
# Restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $super+Shift+F5 restart

# System functions
bindsym $super+Escape mode "$system"

set $system (l)ock,   (e)xit,   (s)uspend,   (h)ibernate,   (r)eboot,   (S)hutdown
mode "$system"
{
  bindsym l exec --no-startup-id $locker, mode "default"
  bindsym e exec --no-startup-id i3-msg exit, mode "default"
  #bindsym u exec --no-startup-id dm-tool switch-to-greeter, mode "default"
  bindsym s exec --no-startup-id $locker && systemctl suspend, mode "default"
  bindsym h exec --no-startup-id $locker && systemctl hibernate, mode "default"
  bindsym r exec --no-startup-id systemctl reboot, mode "default"
  bindsym Shift+s exec --no-startup-id systemctl poweroff, mode "default"

  # Back to normal
  bindsym $super+Escape mode "default"
  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym q mode "default"
}

# Resize window (you can also use the mouse for that)
bindsym $super+Shift+r mode "Resize"

mode "Resize"
{
  # These bindings trigger as soon as you enter the resize mode
  bindsym h resize shrink width 5 px or 5 ppt
  bindsym j resize grow height 5 px or 5 ppt
  bindsym k resize shrink height 5 px or 5 ppt
  bindsym l resize grow width 5 px or 5 ppt

  # Back to normal
  bindsym $super+Shift+r mode "default"
  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym q mode "default"
}

####################
# I3-GAPS SETTINGS #
####################
for_window [class="^.*"] border pixel 0
gaps inner 10
gaps outer 0
smart_gaps on

